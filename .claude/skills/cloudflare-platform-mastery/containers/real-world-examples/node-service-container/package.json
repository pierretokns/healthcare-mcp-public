{
  "name": "nodejs-cloudflare-container",
  "version": "1.0.0",
  "description": "Production-ready Node.js microservice for Cloudflare Container Registry",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t nodejs-cloudflare-container .",
    "docker:run": "docker run -p 8080:8080 nodejs-cloudflare-container",
    "docker:dev": "docker run -p 8080:8080 -e NODE_ENV=development nodejs-cloudflare-container"
  },
  "keywords": [
    "nodejs",
    "cloudflare",
    "container",
    "microservice",
    "express",
    "production-ready"
  ],
  "author": "Cloudflare Container Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "http-proxy-middleware": "^2.0.6",
    "express-prom-bundle": "^6.5.0",
    "winston": "^3.11.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "cloudflare": "^2.20.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}